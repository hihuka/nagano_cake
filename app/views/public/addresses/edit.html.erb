<div class="container">

  <div class="row mb-4">

    <div class="col-12">

      <h3 class="my-4 text title-sub-text">Address edit...</h4>

      <%= form_with model: @address, local:true do |f| %>

        <div class="form-group row text">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-form-label col-3" %>
          <div class="col-3 text">
            <%= f.text_field :postal_code, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row text">
          <%= f.label :address, "住所", class: "col-form-label col-3" %>
          <div class="col-6 text">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row text">
          <%= f.label :name, "宛名", class: "col-form-label col-3" %>
          <div class="col-3 text">
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="col-2 offset-3 text">
            <%= f.submit "Save", class: "btn btn-success btn-block" %>
          </div>
        </div>

      <% end %>

    </div>

  </div>

</div>