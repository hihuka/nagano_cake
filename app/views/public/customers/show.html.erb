<div class="container">

  <%= render "shared/flash_message" %>

  <div class="col-10 mx-auto">

    <div class="row mb-4">

      <div class="col-md-12">

        <h3 class="my-5 text title-text">マイページ</h3>


        <div class="row mb-3">
          <div class="col-md-2">
            <h5 class="font-weight-bold m-2 text">登録情報</h5>
          </div>
          <div class="col-md-2 text">
            <%= link_to "Edit", edit_customers_path, class: "btn btn-success w-100" %>
          </div>
        </div>

        <table class="table table-bordered table-hover">
          <tr>
            <th class="w-25 text">氏名</th>
            <td class="light-text"><%= @customer.last_name + @customer.first_name %></td>
          </tr>
          <tr>
            <th class="text">カナ</th>
            <td class="light-text"><%= @customer.last_name_kana + @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th class="text">郵便番号</th>
            <td class="light-text"><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th class="text">住所</th>
            <td class="light-text"><%= @customer.address %></td>
          </tr>
          <tr>
            <th class="text">電話番号</th>
            <td class="light-text"><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th class="text">メールアドレス</th>
            <td class="light-text"><%= @customer.email %></td>
          </tr>
        </table>

      </div>

    </div>

    <div class="row mb-3">
      <div class="col-md-2">
        <h5 class="font-weight-bold m-2 text">配送先</h5>
      </div>
      <div class="col-md-3 text">
        <%= link_to "Showing", addresses_path, class: "btn btn-primary w-75" %>
      </div>
    </div>

    <div class="row mb-5">
      <div class="col-md-2">
        <h5 class="font-weight-bold m-2 text">注文履歴</h5>
      </div>
      <div class="col-md-3 text">
        <%= link_to "Showing", orders_path, class: "btn btn-primary w-75" %>
      </div>
    </div>

  </div>

</div>