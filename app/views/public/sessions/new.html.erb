<div class="container">

  <%= render "shared/flash_message" %>

  <div class="row mb-5">

    <div class="col-10 mx-auto">

      <h2 class="mt-5 mb-4 ml-n4 text title-text">ログイン</h2>
      <h4 class="mt-5 mb-4 text">会員の方はこちらから</h4>

      <%= form_with model: @customer, url: customer_session_path, class: "pl-4" do |f| %>

        <div class="form-group row text">
          <%= f.label :email, "E-mail", class: "col-4" %>
          <div class="col-8 text">
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
            placeholder: "simple@gmail.com", class: "col-8" %>
          </div>
        </div>

        <div class="form-group row text">
          <%= f.label :password, "Password", class: "col-4" %>
          <div class="col-8 text">
            <%= f.password_field :password, autocomplete: "current_password",
            class: "col-8"%>
          </div>
        </div>

        <div class="form-group row">
          <div class="offset-4 col-2 text">
            <%= f.submit "Log in", class: "col-12 btn btn-primary" %>
          </div>
        </div>

      <% end %>

      <h4 class="mt-5 text">会員登録がお済みでない方</h4>
      <p class="ml-5 pl-5 my-3 text">
        <u>
          <%= link_to "こちら", new_customer_registration_path, class: "text-dark" %>
        </u>
        から新規登録を行ってください。
      </p>

    </div>

  </div>


</div>