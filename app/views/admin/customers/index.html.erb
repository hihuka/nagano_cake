<div class="container">

  <div class="row mb-4">

    <div class="col-12">

      <h3 class="offset-1 my-5 text title-text">顧客一覧画面</h3>

      <div class="row">

        <div class="col-12 mx-auto">

          <table class="table table-hover">

            <thead>
              <tr class="table-active text">
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
              </tr>
            </thead>

            <tbody>
              <% @customers.each do |customer| %>
                <tr class="light-text">
                  <td><%= customer.id %></th>
                  <td class="text">
                    <%= link_to admin_customer_path(customer), class: "text-dark" do %>
                      <%= customer.last_name + customer.first_name %>
                    <% end %>
                  </td>
                  <td>
                    <%= customer.email %>
                  </td>
                  <td>
                    <% if customer.is_deleted %>
                      <span>退会</span>
                    <% else %>
                      <span class="text-success text">有効</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>

          </table>

        </div>

      </div>

    </div>

    <div class="mx-auto text">
      <%= will_paginate @customers, :previous_label => '<前へ', :next_label => '次へ>', renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>

  </div>

</div>