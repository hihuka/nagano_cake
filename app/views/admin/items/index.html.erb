<div class="container my-5">

  <div class="row">
    <div class="offset-1 text-center">
      <h3 class="title-text text">
          商品一覧
      </h3>
    </div>
  </div>
  <h1><%= link_to "", new_admin_item_path, class: "far fa-plus-square float-right text-secondary fa-lg" %></h1>
  <br>
  <div class="row mt-4">
    <table class="table table-hover">
      <thead>
        <tr class="text text-size table-active">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
          <tr class="light-text">
            <td><%= item.id %></td>
            <td class="text">
              <%= link_to admin_item_path(item.id), class: "text-dark" do %>
                <%= item.name %>
              <% end %>
            </td>
            <td>
              <%= item.price %>
              円
            </td>
            <td><%= item.genre.name %></td>
            <td class="text">
              <% if item.is_active == true %>
                販売中
              <% elsif item.is_active == false %>
                販売停止中
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="pagination"><%= paginate @items, theme: 'twitter-bootstrap-4' %></div>
  </div>
</div>